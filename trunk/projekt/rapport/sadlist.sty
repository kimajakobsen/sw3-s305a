%%%%%% Defines the enviroment sadlist used for actor or similar. 
%%%%%% Looks likes the one used in the book OOA&D

%%%%%% Usage: \begin{sadlist}{title}{caption}{label} text \end{sadlist}

%%%%%% Or: as a tabular enviroment.

%%%%%% Define: myCaption if alternativ caption should be used.

%%%%%% Renew: sadspace, sadwidth, sadruletickness, sadb (sadbullet)




\ProvidesPackage{sadlist}
\usepackage{xifthen}
\ifdefined\myCaption
  \newcommand{\sadCaption}[1]{\myCaption{#1}}
\else
  \newcommand{\sadCaption}[1]{#1}
\fi
\newcommand{\sadruletickness}{.5px}
\newcommand{\sadb}[1]{\textbf{#1}}
\newcommand{\sadspace}{\vspace{5px}}
\newcommand{\sadwidth}{\textwidth - 30px}
\newcommand{\sadrule}{\rule{\sadwidth}{\sadruletickness}}
\newcommand{\saption}[1]{\caption{\sadCaption{#1}}}
\newcommand{\sadcap}[1]{#1}



\newenvironment{sadlistar}[1]
{


\begin{center}
\sadrule{} \\
\textbf{\textit{#1}} \\
\sadrule{}

\begin{minipage}{\sadwidth - 30px}
\sadspace
}
{
\sadspace

\end{minipage}
\sadrule{}
\sadcap{}

\end{center}
}


\newenvironment{sadlist}[4][htps]
{
\renewcommand{\sadcap}[1]{\saption{#3}}
\ifdefined\myCaption
  \renewcommand{\sadCaption}[1]{\myCaption{#3}}
\else
  \renewcommand{\sadCaption}[1]{#3}
\fi

\begin{figure}[#1]
%\begin{tabular}{|c|c|}
\label{#4}
\begin{sadlistar}{#2}
}
{

\end{sadlistar}
\end{figure}%
}

